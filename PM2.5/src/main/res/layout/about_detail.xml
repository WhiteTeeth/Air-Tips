<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="16.0dip"
        android:textStyle="bold"
        android:textColor="#ff878787"
        android:layout_marginTop="44.0dip"
        android:layout_marginBottom="25.0dip"
        android:text="@string/about_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="25.0dip"
        android:layout_marginBottom="30.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/developer"
                android:src="@drawable/about_head_j"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/about_name_j"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="55.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/gui"
                android:src="@drawable/about_head_h"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/about_name_h"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textSize="14.0dip"
        android:textStyle="bold"
        android:textColor="#ffbababa"
        android:gravity="center"
        android:id="@id/copyright"
        android:layout_marginBottom="5.0dip"
        android:text="@string/about_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>